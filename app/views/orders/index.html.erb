<p id="notice"><%= notice %></p>

<div id="allOrdersDiv">

  <h1>All Orders</h1>
  <table>
    <thead>
      <tr>
        <th>Order ID</th>
        <% if isEmployee? %>
        <th>Customer ID</th>
        <% end %>
        <th>Item Name/ID</th>
        <th>Quantity</th>
        <th>Placed at</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody class="tblVals">
      <% @orders.each do |order| %>
        <tr>
          <td align="center"><%= order.order_id %></td>
          <% if isEmployee? %>
            <td align="center"><%= order.customer_id %></td>
          <% end %>
          <td align="center"><%= order.item_id %></td>
          <td align="center"><%= order.quantity %></td>
          <td align="center"><%= order.placed_at %></td>
          <td align="center"><%= order.status %></td>
          <td align="center"><%= link_to 'Show', order %></td>
          <!--<td><%= link_to 'Edit', edit_order_path(order) %></td>-->
          <!--<td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <% if not isEmployee? %>
    <%= link_to 'New Order', new_order_path %>
  <% end %>
</div>