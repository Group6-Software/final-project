<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Name</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.item_id %></td>
        <td><%= item.name %></td>
        <td><%= item.cost %></td>
        <td><%= link_to 'Show', item %></td>
        <!--<td><%= link_to 'Edit', edit_item_path(item) %></td>-->
        <!--<td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

    <% if current_user %>
        <% if isEmployee? %>
          <li>
          <%= link_to 'New Item', new_item_path %>
          <%= link_to('View customer orders', orders_path)  %>
          </li>
        <% else %>
          <li>
          <%= link_to('Place an order', new_order_path)  %>
          </li>
          <li>
          <%= link_to('View my Orders', orders_path)  %>
          </li>
        <% end %>
    <% end %>
